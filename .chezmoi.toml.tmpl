{{- $hasInternet := promptBoolOnce . "has_internet" "Does this machine have internet access" -}}
{{- $isWork := promptBoolOnce . "is_work" "Is this a work machine" -}}

encryption = "age"

[age]
    identity = "~/.config/chezmoi/key.txt"
    recipient = "age130gz8hmt38t0jrph0kyq5rrr6ya5rzrpxgd550jlzunwqp8p6ecq7nxwzz"

[data]
    has_internet = {{ $hasInternet }}
    is_work = {{ $isWork }}
{{- if $isWork }}
    git_mirror_base = {{ promptStringOnce . "git_mirror_base" "GitLab mirror base URL" "" | quote }}
    git_mirror_namespace = {{ promptStringOnce . "git_mirror_namespace" "GitLab mirror namespace" "" | quote }}
    work_repo_url = {{ promptStringOnce . "work_repo_url" "Work dotfiles repo URL" "" | quote }}
{{- end }}
